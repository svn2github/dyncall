#///////////////////////////////////////////////////
#
#	GCC nmake rules
#	tool_gcc.nmake
#
#///////////////////////////////////////////////////


CC  =arm-eabi-gcc
CXX =arm-eabi-g++
AR  =arm-eabi-ar
AS  =arm-eabi-as
LD  =arm-eabi-g++#arm-eabi-ld
OCP =arm-eabi-objcopy

!IF "$(BUILD_ARCH)" == "arm9_thumb"

ASFLAGS  = -g -mthumb -mthumb-interwork
CFLAGS   = -g -Wall -O2 -I$(TOP)\dyncall -DARM9 -mcpu=arm9tdmi -mtune=arm9tdmi -fomit-frame-pointer -ffast-math -mthumb -mthumb-interwork
CXXFLAGS = $(CFLAGS) -fno-rtti -fno-exceptions
LDFLAGS  = -g -mthumb -mthumb-interwork -mno-fpu #-Wl,-Map,$(notdir $*.map)
ARFLAGS  =

!ELSE IF "$(BUILD_ARCH)" == "arm9_arm"

ASFLAGS  = -g
CFLAGS   = -g -Wall -O2 -I$(TOP)\dyncall -DARM9 -mcpu=arm9tdmi -mtune=arm9tdmi -fomit-frame-pointer -ffast-math
CXXFLAGS = $(CFLAGS) -fno-rtti -fno-exceptions
LDFLAGS  = -g -mno-fpu #-Wl,-Map,$(notdir $*.map)
ARFLAGS  =

!ENDIF


!IF "$(BUILD_OS)" == "nds"
CFLAGS   = $(CFLAGS) -D__nds__ -I"$(DEVKITPRO_PATH)/libnds/include"
CXXFLAGS = $(CXXFLAGS) -D__nds__ -I"$(DEVKITPRO_PATH)/libnds/include"
LDFLAGS  = $(LDFLAGS) -specs=ds_arm9.specs
!ENDIF


.SUFFIXES:
.SUFFIXES: .o .so .a .arm9 .nds .pdf .c .cpp .s .tex


.s.o:
	echo .s.o: Assembling $< ...
	$(AS) $(ASFLAGS) -o $@ $<

.c.o:
	echo .c.o: Compiling $< ...
	$(CC) $(CFLAGS) -o $@ -c $<

.cpp.o:
	echo .cpp.o: Compiling $< ...
	$(CXX) $(CXXFLAGS) -o $@ -c $<

.tex.pdf:
	pdflatex $<
