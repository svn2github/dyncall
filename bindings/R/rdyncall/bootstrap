download_zip()
{
  VERSION=0.4
  NAME=dyncall-${VERSION}
  ZIP=${NAME}.zip
  wget http://dyncall.org/r${VERSION}/${ZIP}
  unzip ${ZIP}
  mv ${NAME} src/dyncall
  rm ${ZIP}
}

checkout_src()
{
  svn co https://dyncall.org/svn/dyncall/trunk/dyncall src/dyncall
}

# choose between 'checkout_src' or 'download_zip'
# checkout_src
download_zip

