PREFIX_DYNCALL=dyncall
PKG_CPPFLAGS=-I$(PREFIX_DYNCALL)/include
PKG_LIBS=-L$(PREFIX_DYNCALL)/lib -ldyncall_s -ldynload_s -ldyncallback_s

# required by R >= 2.9

all: install-dyncall $(SHLIB)

# required by R <  2.9
before: install-dyncall

install-dyncall:
	make -C dyncall install

.PHONY: install-dyncall
