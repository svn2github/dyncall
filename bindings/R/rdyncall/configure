#!/bin/sh
# R Package: rdyncall
# File: rdyncall/configure
# Description: configure script (unix flavour)
# Copyright (C) 2007-2009 Daniel Adler

if [ -d src/dyncall ]; then
cd src/dyncall
CONFIG_ARGS="--prefix=\$(TOP) --prefix-bd=."
UNAME_SYS=`uname -s`
if [ "$UNAME_SYS" = "Darwin" ]; then
  OS_VERSION=`uname -r`
  OS_VERSION_MAJOR=`echo $OS_VERSION | sed 's/^\([0-9]*\).*/\1/'`
  if [ "$OS_VERSION_MAJOR" != "8" ]; then
    CONFIG_ARGS="${CONFIG_ARGS} --target-universal"
  fi
fi
sh ./configure $CONFIG_ARGS
# sh ./configure --prefix=\$\(TOP\)
else
echo configure error: dyncall sources missing
echo you can bootstrap by:
echo "  cd rdyncall ; sh ./bootstrap ; cd .."
exit 1
fi


