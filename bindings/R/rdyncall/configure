#!/bin/sh
# R Package: rdyncall
# File: rdyncall/configure
# Description: configure script (unix flavour)
# Copyright (C) 2007-2009 Daniel Adler

if [ -d src/dyncall ]; then
cd src/dyncall
sh ./configure --prefix=\$\(TOP\)
else
echo configure error: dyncall source package missing
echo you can bootstrap by:
echo "  cd rdyncall ; sh ./bootstrap ; cd .."
exit 1
fi


